<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/adminPosterImage"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:background="@color/gray_light"
        android:contentDescription="@string/event_poster_content_description" />

    <TextView
        android:id="@+id/adminPosterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_margin="8dp"
        android:background="@drawable/bg_admin_image_title"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:maxLines="1"
        android:ellipsize="end" />

    <ImageButton
        android:id="@+id/adminPosterRemoveButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end|top"
        android:layout_margin="8dp"
        android:background="@drawable/bg_admin_image_remove"
        android:contentDescription="@string/admin_event_images_remove_title"
        android:padding="4dp"
        android:src="@drawable/ic_close_24"
        android:tint="@color/white" />

</FrameLayout>
