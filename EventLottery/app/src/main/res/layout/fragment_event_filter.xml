<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filterRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="filter"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/closeButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/closeButton"
        app:layout_constraintHorizontal_bias="0"
        tools:text="Filter" />

    <!-- Close -->
    <ImageButton
        android:id="@+id/closeButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@android:color/transparent"
        android:contentDescription="close"
        android:padding="4dp"
        android:src="@drawable/ic_close_24"
        app:tint="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Interest header -->
    <TextView
        android:id="@+id/interestLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="filter_interest_label"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Interest" />

    <!-- Interest tags -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/interestChipGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:chipSpacingHorizontal="8dp"
        app:chipSpacingVertical="8dp"
        app:singleLine="false"
        app:singleSelection="false"
        app:layout_constraintTop_toBottomOf="@id/interestLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_art"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Art" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_music"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Music" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_education"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Education" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_sports"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Sports" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_party"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:text="Party" />


    </com.google.android.material.chip.ChipGroup>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toBottomOf="@id/interestChipGroup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Time frame header -->
    <TextView
        android:id="@+id/timeFrameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="filter_time_frame_label"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Time frame" />

    <!-- Start date -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/startDateButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:text="Start date"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/timeFrameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dateSeparator"
        app:layout_constraintHorizontalWeight="1"
        tools:text="TBD" />

    <!-- Separator between dates -->
    <TextView
        android:id="@+id/dateSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="-----"
        app:layout_constraintTop_toTopOf="@id/startDateButton"
        app:layout_constraintBottom_toBottomOf="@id/startDateButton"
        app:layout_constraintStart_toEndOf="@id/startDateButton"
        app:layout_constraintEnd_toStartOf="@id/endDateButton" />

    <!-- End date -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/endDateButton"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:insetLeft="0dp"
        android:insetRight="0dp"
        android:text="End date"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/timeFrameLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dateSeparator"
        app:layout_constraintHorizontalWeight="1"
        tools:text="TBD" />

    <!-- Bottom padding -->
    <View
        android:id="@+id/bottomSpacer"
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintTop_toBottomOf="@id/endDateButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
