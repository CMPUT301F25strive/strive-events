<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventDetailRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entrant.EventDetailFragment">

    <!-- === CONSISTENT TOP BAR === -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topBarLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingTop="16dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back"
            android:padding="4dp"
            android:src="@drawable/ic_baseline_chevron_left_36"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/appNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- === MAIN CONTENT === -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="56dp"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/topBarLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Poster with admin remove overlay -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/eventDetailPoster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/event_poster_content_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/poster_swim"
                    android:elevation="2dp"
                    android:background="@drawable/detail_poster_outline"
                    android:outlineProvider="background"
                    android:clipToOutline="true" />

                <ImageButton
                    android:id="@+id/posterRemoveButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="top|end"
                    android:layout_margin="8dp"
                    android:background="@drawable/circle_bg"
                    android:padding="4dp"
                    android:src="@drawable/ic_close_24"
                    android:contentDescription="@string/admin_poster_delete_content_description"
                    android:visibility="gone" />
            </FrameLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/eventDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadlineSmall"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="20dp"
                tools:text="Title: TBD" />

            <!-- Organizer -->
            <TextView
                android:id="@+id/eventDetailOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="Organizer: TBD" />

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_calendar_24"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/eventDetailDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Date: TBD" />
            </LinearLayout>

            <!-- Venue -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_location_24"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/eventDetailVenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Location: TBD" />
            </LinearLayout>

            <!-- Capacity -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_group_24"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/eventDetailCapacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Capacity: TBD" />
            </LinearLayout>

            <!-- Description text -->
            <TextView
                android:id="@+id/eventDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                tools:text="N/A" />

            <!-- Waiting list Count -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@android:drawable/ic_menu_view"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/eventDetailWaitingListCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="On Waitlist: TBD" />
            </LinearLayout>

            <!-- Waiting list spots -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_group_24"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/eventDetailWaitingListSpots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Waitlist Spots: TBD" />
            </LinearLayout>

            <!-- Registration period -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_schedule_24"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/eventDetailRegPeriod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Registration Period: TBD" />
            </LinearLayout>

            <!-- Category (tag) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_label_24"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/eventDetailTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Category: TBD" />
            </LinearLayout>

            <!-- Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_info_24"
                    app:tint="?attr/colorOnSurfaceVariant" />
                <TextView
                    android:id="@+id/eventDetailStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="Status: TBD" />
            </LinearLayout>
            <!-- fragment_event_detail.xml -->
            <FrameLayout
                android:id="@+id/mapContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="20dp"
                android:clipToOutline="true"
                android:background="@drawable/rounded_map_bg"
                android:visibility="gone">

                <fragment
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:gravity="end"
                android:visibility="visible">

                <!-- Join / Leave Waiting List -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/joinEventButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/join_waiting_list"
                    app:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp" />

                <!-- Send Notification -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sendNotificationButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send Notification"
                    app:backgroundTint="@color/primary"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="8dp" />

                <!-- Admin Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/adminDeleteButton"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Event"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/error"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                    app:icon="@drawable/ic_delete_24"
                    app:iconGravity="textStart"
                    app:iconPadding="6dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
