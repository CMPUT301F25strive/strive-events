<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendNotificationRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".entrant.SendNotificationFragment">

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

    <!-- Message Input -->
    <EditText
        android:id="@+id/messageInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter notification message"
        android:layout_marginTop="16dp" />

    <!-- Send Notification Button -->
    <Button
        android:id="@+id/sendNotificationButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Notification"
        android:layout_marginTop="8dp" />

    <!-- Empty view if no entrants -->
    <TextView
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No entrants found"
        android:visibility="gone"
        android:gravity="center"
        android:padding="16dp"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray" />

    <!-- Entrants RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/entrantsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

</LinearLayout>




