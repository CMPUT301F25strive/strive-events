<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.EventLottery" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize light theme colors if needed -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.EventLottery" parent="Base.Theme.EventLottery" />

    <!-- ========================= -->
    <!-- Custom Alert Dialog Style -->
    <!-- ========================= -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Rounded white background -->
        <item name="android:background">@drawable/rounded_alert_bg</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>

        <!-- Dialog width -->
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>

        <!-- Button styles -->
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

    <style name="AlertDialogPositiveButton" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogNegativeButton" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

</resources>