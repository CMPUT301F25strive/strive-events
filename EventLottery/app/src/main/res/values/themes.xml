<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.EventLottery" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.EventLottery" parent="Base.Theme.EventLottery" />

    <!-- ========================= -->
    <!-- Custom Alert Dialog Style -->
    <!-- ========================= -->
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:background">@drawable/rounded_alert_bg</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogNegativeButton</item>
    </style>

    <style name="AlertDialogPositiveButton" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogNegativeButton" parent="@style/Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <!-- ========================= -->
    <!-- Segmented Menu Text-Only Button -->
    <!-- ========================= -->
    <!-- Text-only segmented button style -->
    <style name="StriveSegmentButtonTextOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>

        <!-- Use these instead of android:background -->
        <item name="cornerRadius">16dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="strokeColor">@android:color/transparent</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RoundedToggleGroup" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">36dp</item> <!-- big pill-style -->
    </style>

</resources>