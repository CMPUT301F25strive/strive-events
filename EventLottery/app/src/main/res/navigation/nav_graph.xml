<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/entrantEventListFragment">

    <fragment
        android:id="@+id/entrantEventListFragment"
        android:name="com.example.eventlottery.entrant.EntrantEventListFragment"
        android:label="@string/home_tab_label"
        tools:layout="@layout/fragment_event_list">
        <action
            android:id="@+id/action_entrantEventListFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.eventlottery.entrant.EventDetailFragment"
        android:label="@string/event_detail_title"
        tools:layout="@layout/fragment_event_detail" />
    <fragment
        android:id="@+id/entrantProfileFragment"
        android:name="com.example.eventlottery.entrant.EntrantProfileFragment"
        android:label="Entrant Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_entrantProfileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.eventlottery.entrant.EditProfileFragment"
        tools:layout="@layout/fragment_edit_profile" />
</navigation>
