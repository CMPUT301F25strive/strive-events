<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <!-- Welcome/Login/Register -->
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.eventlottery.WelcomeFragment"
        android:label="Welcome"
        tools:layout="@layout/fragment_welcome">

        <!-- Navigate to main event list after login or registration -->
        <action
            android:id="@+id/action_welcomeFragment_to_entrantEventListFragment"
            app:destination="@id/entrantEventListFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <!-- Entrant Home Feed -->
    <fragment
        android:id="@+id/entrantEventListFragment"
        android:name="com.example.eventlottery.entrant.EntrantEventListFragment"
        android:label="Home"
        tools:layout="@layout/fragment_event_list">

        <action
            android:id="@+id/action_entrantEventListFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_entrantEventListFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />

        <action
            android:id="@+id/action_entrantEventListFragment_to_myEventsFragment"
            app:destination="@id/myEventsFragment" />

        <action
            android:id="@+id/action_entrantEventListFragment_to_eventDetailFragmentSpecific"
            app:destination="@id/eventDetailFragment" >
            <argument
                android:name="event"
                app:argType="com.example.eventlottery.model.Event"
                app:nullable="false"/>
        </action>

        <!-- NEW: Navigate to CreateEventFragment -->
        <action
            android:id="@+id/action_entrantEventListFragment_to_createEventFragment"
            app:destination="@id/createEventFragment" />
    </fragment>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.eventlottery.entrant.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_entrantEventListFragment"
            app:destination="@id/entrantEventListFragment" />

        <action
            android:id="@+id/action_profileFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />

        <action
            android:id="@+id/action_profileFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/profileFragment"
            app:popUpToInclusive="true"/>

        <action
            android:id="@+id/action_profileFragment_to_profileGuidelinesFragment"
            app:destination="@id/profileGuidelinesFragment" />

        <action
            android:id="@+id/action_profileFragment_to_adminEntrantsFragment"
            app:destination="@id/adminEntrantsFragment" />

        <action
            android:id="@+id/action_profileFragment_to_adminNotificationsFragment"
            app:destination="@id/adminNotificationsFragment" />

        <action
            android:id="@+id/action_profileFragment_to_adminEventImagesFragment"
            app:destination="@id/adminEventImagesFragment" />

        <action
            android:id="@+id/action_profileFragment_to_myEventsFragment"
            app:destination="@id/myEventsFragment" />

        <action
            android:id="@+id/action_profileFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" >
            <argument
                android:name="event"
                app:argType="com.example.eventlottery.model.Event"
                app:nullable="false"/>
        </action>
    </fragment>

    <!-- Edit Profile Fragment -->
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.example.eventlottery.entrant.ProfileEditFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

    <!-- Event Detail Fragment -->
    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.eventlottery.entrant.EventDetailFragment"
        android:label="Event Detail"
        tools:layout="@layout/fragment_event_detail">

        <action
            android:id="@+id/action_eventDetailFragment_to_sendNotificationFragment"
            app:destination="@id/sendNotificationFragment" />

        <action
            android:id="@+id/action_eventDetailFragment_to_waitingListFragment"
            app:destination="@id/waitingListFragment" />

        <action
            android:id="@+id/action_eventDetailFragment_to_chosenEntrantsFragment"
            app:destination="@id/chosenEntrantsFragment" />

        <argument
            android:name="event"
            app:argType="com.example.eventlottery.model.Event"
            app:nullable="false" />
    </fragment>
    <!-- My Events Fragment -->
    <fragment
        android:id="@+id/myEventsFragment"
        android:name="com.example.eventlottery.entrant.MyEventsFragment"
        android:label="My Events"
        tools:layout="@layout/fragment_event_list">

        <action
            android:id="@+id/action_myEventsFragment_to_createEventFragment"
            app:destination="@id/createEventFragment" />
        <action
            android:id="@+id/action_myEventsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_myEventsFragment_to_entrantEventListFragment"
            app:destination="@id/entrantEventListFragment" />

        <action
            android:id="@+id/action_myEventsFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />

        <action
            android:id="@+id/action_myEventsFragment_to_eventDetailFragmentSpecific"
            app:destination="@id/eventDetailFragment" >
            <argument
                android:name="event"
                app:argType="com.example.eventlottery.model.Event"
                app:nullable="false"/>
        </action>

    </fragment>

    <!-- Lottery Guidelines Fragment -->
    <fragment
        android:id="@+id/profileGuidelinesFragment"
        android:name="com.example.eventlottery.entrant.ProfileGuidelinesFragment"
        android:label="Lottery Guidelines"
        tools:layout="@layout/fragment_profile_guidelines" />

    <fragment
        android:id="@+id/adminEntrantsFragment"
        android:name="com.example.eventlottery.admin.AdminEntrantsFragment"
        android:label="@string/admin_entrants_title"
        tools:layout="@layout/fragment_admin_entrants">

        <action
            android:id="@+id/action_adminEntrantsFragment_to_adminEditProfileFragment"
            app:destination="@id/adminEditProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/adminEditProfileFragment"
        android:name="com.example.eventlottery.admin.AdminEditProfileFragment"
        android:label="@string/admin_profile_edit_title"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/adminNotificationsFragment"
        android:name="com.example.eventlottery.admin.AdminNotificationsFragment"
        android:label="@string/admin_notifications_title"
        tools:layout="@layout/fragment_admin_notifications" />

    <fragment
        android:id="@+id/adminEventImagesFragment"
        android:name="com.example.eventlottery.admin.AdminEventImagesFragment"
        android:label="@string/admin_event_images_title"
        tools:layout="@layout/fragment_admin_event_images" />

    <fragment
        android:id="@+id/createEventFragment"
        android:name="com.example.eventlottery.entrant.CreateEventFragment"
        android:label="Create Event"
        tools:layout="@layout/fragment_create_event" />

    <fragment
        android:id="@+id/sendNotificationFragment"
        android:name="com.example.eventlottery.entrant.SendNotificationFragment"
        android:label="Send Notification"
        tools:layout="@layout/fragment_send_notifications" />
    <fragment
        android:id="@+id/waitingListFragment"
        android:name="com.example.eventlottery.entrant.WaitingListFragment"
        android:label="Waiting List"
        tools:layout="@layout/fragment_waiting_list" />

    <fragment
        android:id="@+id/chosenEntrantsFragment"
        android:name="com.example.eventlottery.organizer.ChosenEntrantsFragment"
        android:label="@string/title_chosen_entrants"
        tools:layout="@layout/fragment_chosen_entrants">

        <argument
            android:name="chosen_event_id"
            app:argType="string"
            app:nullable="false" />

        <argument
            android:name="chosen_event_title"
            app:argType="string"
            android:defaultValue="" />
    </fragment>


</navigation>
