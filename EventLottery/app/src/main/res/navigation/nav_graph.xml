<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/entrantEventListFragment">

    <!-- Entrant Home Feed -->
    <fragment
        android:id="@+id/entrantEventListFragment"
        android:name="com.example.eventlottery.entrant.EntrantEventListFragment"
        android:label="Home"
        tools:layout="@layout/fragment_event_list">

        <action
            android:id="@+id/action_entrantEventListFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_entrantEventListFragment_to_eventDetailFragment"
            app:destination="@id/eventDetailFragment" />
    </fragment>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.eventlottery.entrant.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_entrantEventListFragment"
            app:destination="@id/entrantEventListFragment" />

        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <!-- Edit Profile Fragment -->
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.eventlottery.entrant.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile">

        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />

        <action
            android:id="@+id/action_editProfileFragment_to_entrantEventListFragment"
            app:destination="@id/entrantEventListFragment" />
    </fragment>

    <!-- Event Detail Fragment -->
    <fragment
        android:id="@+id/eventDetailFragment"
        android:name="com.example.eventlottery.entrant.EventDetailFragment"
        android:label="Event Detail"
        tools:layout="@layout/fragment_event_detail" />
</navigation>